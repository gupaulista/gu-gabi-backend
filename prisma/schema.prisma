generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  persons       Person[]
  categories    Category[]
  monthlyGoals  MonthlyGoal[]
  apiConfig     ApiConfig?
}

model Person {
  id        String   @id @default(uuid())
  name      String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactions Transaction[]

  @@unique([name, userId])
}

model Category {
  id        String   @id @default(uuid())
  name      String
  color     String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactions Transaction[]

  @@unique([name, userId])
}

model Transaction {
  id          String   @id @default(uuid())
  amount      Float
  type        String
  date        DateTime
  time        String?
  description String

  personId    String
  person      Person   @relation(fields: [personId], references: [id])

  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model MonthlyGoal {
  id        String   @id @default(uuid())
  month     Int
  year      Int
  amount    Float
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([month, year, userId])
}

model ApiConfig {
  id        String   @id @default(uuid())
  geminiKey String
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
